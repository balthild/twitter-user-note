{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
    },
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": false,
    "verbatimModuleSyntax": false
  }
}
